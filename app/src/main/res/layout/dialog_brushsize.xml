<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCEDC8"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pencil_brush"
        android:src="@drawable/pen"
        android:backgroundTint="#DCEDC8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/small_brush"
        android:contentDescription="Pencil"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/small_brush"
        android:src="@drawable/small"
        android:backgroundTint="#DCEDC8"
        app:layout_constraintTop_toBottomOf="@id/pencil_brush"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/middle_brush"
        android:contentDescription="Small Brush"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middle_brush"
        android:src="@drawable/mid"
        android:backgroundTint="#DCEDC8"
        app:layout_constraintTop_toBottomOf="@id/small_brush"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/large_brush"
        android:contentDescription="Medium Brush"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/large_brush"
        android:src="@drawable/large"
        android:backgroundTint="#DCEDC8"
        app:layout_constraintTop_toBottomOf="@id/middle_brush"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Large Brush"
        />

</androidx.constraintlayout.widget.ConstraintLayout>